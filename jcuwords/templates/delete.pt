  <body>
    <h1>Remove words</h1>
    <?python
        from jcuwords import models
        keywords = models.DBSession.query(models.Keyword).all() 
    ?>
    <span tal:repeat="kw keywords">
       <a href="/delete" tal:content="kw.keyword"
          tal:attributes="href request.route_url('keyword_delete', keyword_id=kw.id)">Keyword</a>
    </span>
    <a href="#" tal:attributes="href request.route_url('home')">See cloud</a>
    <a tal:attributes="href request.route_url('home', _query={'clear': ''})">Refresh the cloud</a>
    <a href="#" tal:attributes="href return_url">Back to the JCU Futures site</a>
  </body>
</html>
